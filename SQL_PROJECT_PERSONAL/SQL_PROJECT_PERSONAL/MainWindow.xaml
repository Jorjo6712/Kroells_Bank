<Window x:Class="SQL_PROJECT_PERSONAL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQL_PROJECT_PERSONAL"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="PinInput" Height="512" Width="320">
    <Grid Background="Beige">

        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <TextBlock 
        Grid.Column="1"
        FontSize="53"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        Foreground="RoyalBlue"
        FontWeight="DemiBold"
        >
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" Color="Black" BlurRadius="3"/>
            </TextBlock.Effect>
        Kr√∏ll's Bank
        </TextBlock>

        <TextBox
        IsReadOnly="True"
        x:Name="PinCode"
        Grid.Row="1"
        Grid.Column="1"
        FontSize="55"
        Margin="10"
        TextAlignment="Center"
        Background="Azure"
        Opacity="0.9">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
            PIN
        </TextBox>

        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button 
                    x:Name="Number1"
                    Grid.Column="0" 
                    Grid.Row="0"
                    Tag="1"
                    FontSize="50" Click="NumberButton_Click">
                    1
                </Button>
                <Button
                    x:Name="Number2"
                    Grid.Column="1" 
                    Grid.Row="0"
                    Tag="2"
                    FontSize="50" Click="NumberButton_Click">
                    2
                </Button>
                <Button 
                    x:Name="Button3"
                    Grid.Column="2" 
                    Grid.Row="0"
                    Tag="3"
                    FontSize="50" Click="NumberButton_Click">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    3
                </Button>
                <Button 
                    x:Name="Button4"
                    Grid.Column="0" 
                    Grid.Row="1"
                    Tag="4"
                    FontSize="50" Click="NumberButton_Click">
                    4
                </Button>
                <Button 
                    x:Name="Button5"
                    Grid.Column="1" 
                    Grid.Row="1"
                    Tag="5"
                    FontSize="50" Click="NumberButton_Click">
                    5
                </Button>
                <Button 
                    x:Name="Button6"
                    Grid.Column="2" 
                    Grid.Row="1"
                    Tag="6"
                    FontSize="50" Click="NumberButton_Click">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    6
                </Button>
                <Button 
                    x:Name="Button7"
                    Grid.Column="0" 
                    Grid.Row="2"
                    Tag="7"
                    FontSize="50" Click="NumberButton_Click">
                    7
                </Button>
                <Button 
                    x:Name="Button8"
                    Grid.Column="1" 
                    Grid.Row="2"
                    Tag="8"
                    FontSize="50" Click="NumberButton_Click">
                    8
                </Button>
                <Button 
                    x:Name="Button9"
                    Grid.Column="2" 
                    Grid.Row="2"
                    Tag="9"
                    FontSize="50" Click="NumberButton_Click">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    9
                </Button>

            </Grid>

            <!-- This code is for the last for buttons -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button 
                    x:Name="Button0"
                    Grid.Column="0"
                    Tag="0"
                    FontSize="50" Click="NumberButton_Click">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    0
                </Button>
                <Button 
                x:Name="EnterButton"
                Grid.Column="1"
                Background="#48A14D"
                FontSize="18"
                FontWeight="Bold" Click="EnterButton_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    Enter
                </Button>
                <Button
                x:Name="ClearButton"
                Grid.Column="2"
                Background="Yellow"
                FontSize="18"
                FontWeight="Bold" Click="ClearButton_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    Clear
                </Button>
                <Button 
                x:Name="CancelButton"
                Grid.Column="3"
                Background="Red"
                FontSize="18"
                FontWeight="Bold" Click="CancelButton_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    Cancel
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
